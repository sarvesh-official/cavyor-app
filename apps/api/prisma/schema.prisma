generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id             String   @id @default(cuid())
  name           String
  logoUrl        String?  // Brand logo URL
  primaryColor   String   // Hex or CSS string: "#F44336"
  secondaryColor String   // Hex or CSS string: "#FFFFFF"
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("tenants")
}
